{
  "name": "koa-typescript",
  "version": "1.0.0",
  "description": "Server-side JavaScript with Koa and Typescript",
  "private": true,
  "scripts": {
    "build": "tslint -p . && tsc",
    "start": "node dist/server/server.js",
    "start-watch": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' src/server/server.ts",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.1",
    "koa-router": "7.4.0",
    "react": "16.4.1",
    "react-dom": "16.4.1"
  },
  "devDependencies": {
    "@types/jest": "23.1.4",
    "@types/koa": "2.0.46",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-router": "7.0.30",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@types/supertest": "^2.0.4",
    "jest": "23.3.0",
    "nodemon": "1.17.3",
    "supertest": "3.1.0",
    "ts-jest": "23.0.0",
    "ts-node": "6.0.1",
    "tslint": "5.9.1",
    "typescript": "2.8.3"
  }
}
